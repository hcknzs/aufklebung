{
	"overrides": [
		{
			"files": ["*.md", "*.mdx"],
			"options": {
				"tabWidth": 1
			}
		},
		{
			"excludeFiles": ["./tsconfig.json"],
			"files": ["*.json"],
			"options": {
				"jsonRecursiveSort": true,
				"plugins": [
					"prettier-plugin-tailwindcss",
					"prettier-plugin-sort-json"
				],
				"tailwindFunctions": ["clsx", "cn", "tw", "cva", "cx"]
			}
		}
	],
	"plugins": ["prettier-plugin-tailwindcss"],
	"tailwindFunctions": ["clsx", "cn", "tw", "cva", "cx"]
}
